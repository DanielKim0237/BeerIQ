<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">


    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.beeriq.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_beercategories"
        android:name="com.example.beeriq.ui.BeerCategories.BeerCategoriesFragment"
        android:label="@string/title_beercategories"
        tools:layout="@layout/fragment_beer_categories" />
    <fragment
        android:id="@+id/navigation_friendslist"
        android:name="com.example.beeriq.ui.FriendsList.FriendsList"
        android:label="@string/title_friends"
        tools:layout="@layout/fragment_friends_list" />

    <fragment
        android:id="@+id/navigation_location"
        android:name="com.example.beeriq.ui.Location.BeerLocatorFragment"
        android:label="@string/title_locator"
        tools:layout="@layout/fragment_beer_locator" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.beeriq.ui.userprofile.UserProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_userprofile" />
</navigation>